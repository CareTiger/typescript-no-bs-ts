// tsconfig.json
{
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2020",
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "exclude": ["node_modules"]
}
